<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20034c">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Privilegios_introduccion"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privilegios"
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/btn_privilegios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:src="@drawable/umlmini"
        android:layout_below="@+id/textView5"
        android:layout_above="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarte"
        android:id="@+id/btn_privilegios"
        android:gravity="end"
        android:onClick="introduccionPrivilegios"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0083fd" />

</RelativeLayout>